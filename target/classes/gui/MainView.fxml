<?xml version="1.0" encoding="UTF-8"?>

<!-- 
  This is the main FXML file for the Traffic Simulator application.
  It defines the layout and all the UI elements (buttons, labels, etc.).
  The 'fx:controller="gui.Controller"' attribute links this file to the Controller.java class.
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 
  The BorderPane is the root layout. It divides the screen into 5 regions:
  top, bottom, left, right, and center.
-->

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
    
    <!-- 
      TOP Region:
      A horizontal box (HBox) for the application title bar.
    -->
    <top>
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #333333;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Traffic Simulator" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- 
      LEFT Region:
      A ScrollPane containing a vertical box (VBox) for all the controls.
    -->
    <left>
        <ScrollPane fx:id="leftControlPanel" fitToWidth="true" hbarPolicy="NEVER" prefWidth="300.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;">
            <content>
                <VBox prefWidth="280.0" spacing="10.0">
                    <children>
                  <Label text="Simulation Interactions">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                        
                        <!-- 
                          Section 1: Controls
                          An Accordion holds multiple TitledPanes (collapsible menus).
                        -->
                        <Accordion>
                            <panes>
                                <TitledPane animated="false" expanded="true" text="Simulation Control">
                                    <content>
                                        <VBox spacing="5.0">
                                            <children>
                                                <Button fx:id="startButton" mnemonicParsing="false" onAction="#startSimulation" prefWidth="200.0" text="Start Simulation" />
                                                <Button fx:id="pauseButton" mnemonicParsing="false" prefWidth="200.0" text="Pause" />
                                                <Button fx:id="stepButton" mnemonicParsing="false" prefWidth="200.0" text="Step Forward" />
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                
                                <TitledPane animated="false" text="Vehicle Actions">
                                    <content>
                                        <VBox spacing="5.0">
                                            <children>
                                                <Label text="Vehicle ID:" />
                                                <TextField fx:id="vehicleIdField" promptText="e.g., v_1" />
                                                <Label text="Edge ID:" />
                                                <TextField fx:id="routeIdField" promptText="e.g., edge_0" />
                                                <Button fx:id="injectVehicleButton" mnemonicParsing="false" prefWidth="200.0" text="Inject Vehicle" />
                                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <Button fx:id="setVehicleSpeedButton" mnemonicParsing="false" text="Set Speed (m/s):" />
                                                        <TextField fx:id="vehicleSpeedField" prefWidth="100.0" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <Button fx:id="setVehicleColorButton" mnemonicParsing="false" text="Set Color (R,G,B):" />
                                                        <TextField fx:id="vehicleColorField" prefWidth="100.0" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                
                                <TitledPane animated="false" text="Traffic Light Actions">
                                    <content>
                                        <VBox spacing="5.0">
                                            <children>
                                                <Label text="Traffic Light ID:" />
                                                <TextField fx:id="trafficLightIdField" promptText="e.g., tl_1" />
                                                <Button fx:id="setRedPhaseButton" mnemonicParsing="false" prefWidth="200.0" text="Set Red Phase" />
                                                <Button fx:id="setGreenPhaseButton" mnemonicParsing="false" prefWidth="200.0" text="Set Green Phase" />
                                                <Button fx:id="resumeAutoButton" mnemonicParsing="false" prefWidth="200.0" text="Resume Auto Control" />
                                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <Button fx:id="setPhaseDurationButton" mnemonicParsing="false" text="Set Duration (s):" />
                                                        <TextField fx:id="phaseDurationField" prefWidth="100.0" />
                                                    </children>
                                                </HBox>
                                                <CheckBox fx:id="adaptiveTrafficCheck" mnemonicParsing="false" text="Enable Simple Adaptive Control (not ye)" />
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                
                                <TitledPane animated="false" text="Vehicle Filtering">
                                    <content>
                                        <VBox spacing="5.0">
                                            <children>
                                                <Label text="Filter by Color (R,G,B):" />
                                                <TextField fx:id="filterColorField" />
                                                <Label text="Filter by Min Speed (m/s):" />
                                                <TextField fx:id="filterSpeedField" />
                                                <Label text="Filter by Edge ID:" />
                                                <TextField fx:id="filterEdgeField" />
                                                <Button fx:id="applyFilterButton" mnemonicParsing="false" prefWidth="200.0" text="Apply Filter" />
                                                <Button fx:id="clearFilterButton" mnemonicParsing="false" prefWidth="200.0" text="Clear Filter" />
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                
                                <TitledPane animated="false" text="Stress Testing">
                                    <content>
                                        <VBox spacing="5.0">
                                            <children>
                                                <Label text="Edge ID to Stress:" />
                                                <TextField fx:id="stressEdgeField" />
                                                <Label text="Number of Vehicles:" />
                                                <TextField fx:id="stressCountField" />
                                                <Button fx:id="stressTestButton" mnemonicParsing="false" prefWidth="200.0" text="Run Stress Test" />
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                            </panes>
                        </Accordion>
                  <Region prefHeight="0.0" prefWidth="277.0" />
                  <Label text="Sumo-GUI">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TitledPane animated="false" text="Sumo-GUI">
                     <content>
                        <VBox prefHeight="72.0" prefWidth="275.0">
                           <children>
                              <Label text="Path to sumo-gui:" />
                              <TextField fx:id="pathToSumoGui" promptText="ex: /Users/apple/sumo/bin/sumo-gui" />
                              <BorderPane prefHeight="64.0" prefWidth="240.0">
                                 <center>
                                    <Button fx:id="startSumoGuiButton" mnemonicParsing="false" text="Start Sumo GUI" BorderPane.alignment="CENTER">
                                       <padding>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </padding>
                                       <BorderPane.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </BorderPane.margin>
                                    </Button>
                                 </center>
                              </BorderPane>
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
                        
                        <!-- 
                          Section 2: Data & Statistics
                          These are separate TitledPanes, not in the Accordion.
                        -->
                        <Region VBox.vgrow="ALWAYS" />
                        <Label text="Live Statistics &amp; Data">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TitledPane animated="false" expanded="true" text="Live Statistics">
                            <content>
                                <VBox spacing="5.0">
                                    <children>
                                        <HBox spacing="10.0">
                                            <children>
                                                <Label text="Simulation Step:" />
                                                <Label fx:id="simStepLabel" text="0" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10.0">
                                            <children>
                                                <Label text="Vehicle Count:" />
                                                <Label fx:id="vehicleCountLabel" text="0" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10.0">
                                            <children>
                                                <Label text="Avg. Speed (km/h):" />
                                                <Label fx:id="avgSpeedLabel" text="0.0" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10.0">
                                            <children>
                                                <Label text="Avg. Travel Time (s):" />
                                                <Label fx:id="avgTravelTimeLabel" text="0.0" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10.0">
                                            <children>
                                                <Label text="Congestion:" />
                                                <Label fx:id="congestionLabel" text="N/A" />
                                            </children>
                                        </HBox>
                                        <Button fx:id="showChartsButton" mnemonicParsing="false" prefWidth="200.0" text="Show Live Charts" />
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" text="Data Export">
                            <content>
                                <VBox spacing="5.0">
                                    <children>
                                        <CheckBox fx:id="exportFilterCheck" mnemonicParsing="false" text="Use current filters in export" />
                                        <Button fx:id="exportCsvButton" mnemonicParsing="false" prefWidth="200.0" text="Export Statistics to CSV" />
                                        <Button fx:id="exportPdfButton" mnemonicParsing="false" prefWidth="200.0" text="Generate PDF Report" />
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </left>
    
    <!-- 
      BOTTOM Region:
      A TitledPane (collapsible) for the Simulation Log.
    -->
    <bottom>
        <TitledPane collapsible="true" expanded="true" text="Simulation Log" BorderPane.alignment="CENTER">
            <content>
                <ScrollPane prefHeight="100.0" prefWidth="200.0">
                    <content>
                        <Label fx:id="logLabel" alignment="TOP_LEFT" prefHeight="100.0" prefWidth="1380.0" style="-fx-background-color: #ffffff;" wrapText="true" />
                    </content>
                </ScrollPane>
            </content>
        </TitledPane>
    </bottom>
    
    <!-- 
      CENTER Region:
      A StackPane is used here to layer the Map Controls on top of the Map.
    -->
    <center>
        <StackPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                
                <!-- 
                  Layer 1: The Map
                  A ScrollPane holds the Pane (mapPane) to allow panning.
                -->
                <ScrollPane fx:id="mapScrollPane" prefHeight="200.0" prefWidth="200.0">
                    <content>
                        <Pane fx:id="mapPane" prefHeight="2000.0" prefWidth="2000.0" style="-fx-background-color: #ffffff;">
                     <children>
                        <StackPane alignment="TOP_RIGHT" layoutX="1047.0" layoutY="1.0" opacity="0.7" prefHeight="31.0" prefWidth="30.0">
                           <children>
                              <Button alignment="TOP_RIGHT" mnemonicParsing="false" text="?" textAlignment="CENTER" />
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </StackPane>
                     </children></Pane>
                    </content>
                </ScrollPane>
                
                            <!-- 
                  Layer 2: The Map Controls (Zoom buttons)
                              This StackPane is aligned to the bottom-right of the center region.
                            -->
                <StackPane fx:id="mapControlsContainer" alignment="BOTTOM_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="99.0" prefWidth="118.0" StackPane.alignment="BOTTOM_RIGHT">
                    <children>
                        <!-- 
                          This VBox holds the zoom buttons.
                                      The hover/opacity style has been removed.
                                      It is now a simple, semi-transparent box.
                                    -->
                        <VBox fx:id="mapControlsVBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="92.0" prefWidth="108.0" spacing="3.0" style="-fx-background-color: #AAAAAA99; -fx-background-radius: 5; -fx-opacity: 0.9;">
                            <children>
                                <Label text="Map Controls">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="120.0" prefWidth="200.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                                      <Button fx:id="zoomInButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="76.0" text="Zoom In">
                                 <font>
                                    <Font size="8.0" />
                                 </font>
                              </Button>
                                      <Button fx:id="zoomOutButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="100.0" text="Zoom Out" GridPane.rowIndex="1">
                                 <font>
                                    <Font size="8.0" />
                                 </font>
                              </Button>
                                      <Button fx:id="resetViewButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="100.0" text="Reset View" GridPane.columnIndex="1">
                                 <font>
                                    <Font size="8.0" />
                                 </font>
                              </Button>
                                      <ToggleButton fx:id="toggle3DButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="100.0" text="Toggle 3D" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <font>
                                    <Font size="8.0" />
                                 </font>
                              </ToggleButton>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </GridPane>
                            </children>
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
                        </VBox>
                    </children>
                    <StackPane.margin>
                        <Insets bottom="20.0" right="20.0" />
                    </StackPane.margin>
                    
                            </StackPane>
            </children>
        </StackPane>
    </center>
</BorderPane>
